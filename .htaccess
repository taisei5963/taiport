RewriteEngine On

# RewriteCond %{QUERY_STRING} !path=taiport
# RewriteRule ^taiport/?$ /?path=taiport [L,QSA]
# RewriteRule ^taiport/(.+)$ /taiport/?path=/taiport/$1 [L,QSA]

# ルートURLへのアクセスを taiport/web/home.php にリダイレクト
RewriteRule ^$ /web/home.php [L]

# 他のリクエストもファイル拡張子を隠す
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ /web/$1.php [L]