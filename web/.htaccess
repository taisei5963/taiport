RewriteEngine On

# 単純なリダイレクトルールで動作確認
RewriteCond %{QUERY_STRING} !path=taiport
RewriteRule ^taiport/?$ /?path=taiport [L,QSA]
RewriteRule ^taiport/(.+)$ /taiport/?path=/taiport/$1 [L,QSA]

# 他のリクエストもファイル拡張子を隠す
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ $1.php [L]